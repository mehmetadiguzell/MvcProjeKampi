@model List<Entities.Concrete.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Id</td>
            <td>Hakkımda Başlğı 1</td>
            <td>Durum</td>
            <td>Aktif Yap</td>
            <td>Pasif Yap</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AboutId</td>
                <td>Başlık</td>
                <td>@(item.Status==true?"Aktif":"Pasif")</td>
                <td><a href="/About/Status/@item.AboutId" class="btn btn-success">Aktif Yap</a></td>
                <td><a href="/About/Status/@item.AboutId" class="btn btn-danger">Pasif Yap</a></td>
            </tr>
        }
    </tbody>
</table>
<br />
@Html.Action("AboutPartial","About")