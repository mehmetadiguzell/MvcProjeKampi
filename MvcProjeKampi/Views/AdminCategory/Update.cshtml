@model Entities.Concrete.Category
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kategori Güncelleme Sayfası</h1>
<br />
@using (Html.BeginForm("Update", "AdminCategory", FormMethod.Post, new { @class = "mt-5" }))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CategoryName)
        <br />
        @Html.Label("Kategori Açıklama")
        @Html.TextAreaFor(m => m.CategoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CategoryDescription)
        <br />
        <button type="submit" class="btn btn-success">Kaydet</button>
        @Html.HiddenFor(m=>m.CategoryId)
    </div>
}