@model List<Entities.Concrete.Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Kullanıcı Mail</th>
            <th>Yetki</th>
            <th>Status</th>
            <th>PasifYap</th>
            <th>Yetkisini Değiştir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
        <tr>
            <th>@admin.AdminId</th>
            <th>@admin.AdminUserName</th>
            <th>@admin.AdminRole</th>
            <td><a href="/Authorization/Delete/@admin.AdminId" class="btn btn-danger">Pasif Yap</a></td>
            <td><a href="/Authorization/Update/@admin.AdminId" class="btn btn-warning">Yetkisini Değiştir</a></td>
        </tr>
        }
    </tbody>
</table>
<a href="/Authorization/Add" class="btn btn-info">Yeni Admin Tanımla</a>

